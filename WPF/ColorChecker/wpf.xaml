<Window x:Class="ColorChecker.wpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="ColorChecker" Height="200" Width="180">
    <Grid>
        <Button x:Name="closeButton" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20" Height="30" Width="100" Click="closeButton_Click"/>
        <TextBox BorderThickness="0" Background="Transparent" HorizontalAlignment="Left" Margin="40,57,0,0" TextWrapping="Wrap" Text="登録済みです。" FontSize="15" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
