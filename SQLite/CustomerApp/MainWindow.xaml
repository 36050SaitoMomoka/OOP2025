<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--項目-->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="氏名" FontSize="20" Margin="10" TextAlignment="Right"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="電話番号" FontSize="20" Margin="10" TextAlignment="Right"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="住所" FontSize="20" Margin="10" TextAlignment="Right"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="画像" FontSize="20" Margin="10" TextAlignment="Right"/>

        <!--入力-->
        <TextBox Grid.Row="0" Grid.Column="1" Margin="10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="10"/>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="10"/>

        <!--ドロップダウンリスト-->
        <ComboBox x:Name="ActionSelector" Grid.Row="0" Grid.Column="2" Width="120" Margin="5" SelectedIndex="0" FontSize="20" HorizontalAlignment="Center">
            <ComboBoxItem Content="保存"/>
            <ComboBoxItem Content="更新"/>
            <ComboBoxItem Content="削除"/>
        </ComboBox>

        <!--処理ボタン-->
        <Button x:Name="ExectionButton" Grid.Row="5" Grid.Column="2" Content="実行" Margin="5" FontSize="20" Click="ExectionButton_Click"/>

        <!--画像-->
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Height="180" Margin="10" VerticalAlignment="Bottom" BorderBrush="Gray" BorderThickness="0.5">
            <Image x:Name="Image" Stretch="Uniform"/>
        </Border>

        <!--画像選択・削除ボタン-->
        <Button x:Name="OpenFile" Content="開く..." Grid.Row="3" Grid.Column="1" Width="80" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4"/>
        <Button x:Name="DeleteImage" Content="削除" Grid.Row="3" Grid.Column="1" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"/>

        <Border Grid.Row="0" Grid.Column="3" Grid.RowSpan="5" Grid.ColumnSpan="2" Margin="4">
            <ListView x:Name="CustomerList" SelectionChanged="CustomerList_SelectionChanged"/>
        </Border>







    </Grid>
</Window>
